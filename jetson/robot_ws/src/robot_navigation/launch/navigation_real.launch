<!-- navigation_real.launch -->
<launch>

  <!-- 0. Relógio real (NÃO use_sim_time) -->
  <!-- Se seu driver publica /clock, mantenha use_sim_time="false" -->
  
  <!-- 1. Descrição + TF de juntas -->
  <param name="robot_description" textfile="$(find robot_description)/urdf/robot_description.urdf" />

  <node pkg="robot_state_publisher" type="robot_state_publisher"
        name="robot_state_publisher">
    <param name="publish_frequency" value="50"/>
  </node>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

  <!-- 3. Filtro Madgwick + EKF (reaproveita seu YAML já ajustado) -->
  <include file="$(find robot_navigation)/launch/ekf_imu.launch"/>

  <!-- <node pkg="tf" type="static_transform_publisher" name="static_tf_map_to_odom" args="0 0 0 0 0 0 map odom 100" /> -->

  <!-- 4. Servidor de mapa pré-construído -->
  <node pkg="map_server" type="map_server" name="map_server"
        args="$(find robot_navigation)/maps/map.yaml"/>

  <!-- 5. Localização probabilística (AMCL)  -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <param name="odom_model_type"        value="omni"/>
    <param name="base_frame_id"          value="base_link"/>
    <param name="odom_frame_id"          value="odom"/>
    <param name="laser_model_type"       value="likelihood_field"/>
    <param name="laser_max_beams"        value="40"/>
    <param name="min_particles"          value="500"/>
    <param name="max_particles"          value="2000"/>
    <param name="kld_err"               value="0.02"/>
    <param name="kld_z"                 value="0.99"/>
    <param name="transform_tolerance"   value="0.2"/>
    <!-- ruídos odométricos consistentes com EKF -->
    <param name="odom_alpha1" value="0.15"/>
    <param name="odom_alpha2" value="0.15"/>
    <param name="odom_alpha3" value="0.6"/>
    <param name="odom_alpha4" value="0.15"/>
    <param name="odom_alpha5" value="0.1"/>
  </node>

  <!-- 6. Navegação (move_base + costmaps) -->
  <include file="$(find robot_navigation)/launch/move_base_real.launch"/>

</launch>
